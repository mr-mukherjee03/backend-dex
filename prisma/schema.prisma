generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum OrderStatus {
  pending
  routing
  quoted
  building
  submitted
  confirmed
  failed
}

model Order {
  id             String      @id
  type           String
  tokenIn        String
  tokenOut       String
  amountIn       Float
  slippageBps    Int
  status         OrderStatus
  txHash         String?
  failureReason  String?
  quotedAmountOut Float?
  dex            String?

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
}
